        <%- style %>
        
    </head>

 
  <body style="  background-image: url('https://cutewallpaper.org/21/gif-black-background/Black-background-gif-13-GIF-Images-Download.gif');  background-repeat: no-repeat;  background-attachment: fixed;
  background-size: 100% 100%;">

        <%- include('_header'); %>

       
        
        <main id="layout-main">
            <%- body %>

        </main>


        <%- include('_footer'); %>

        <%- script %>

        <script>
            <% if (flash.success && flash.success.length > 0) {%>
                new Noty({
                    theme: 'relax',
                    text: "<%= flash.success %>",
                    type: 'success',
                    layout: 'topRight',
                    timeout: 1500
                    
                }).show();    
            <%} %>

            <% if (flash.error && flash.error.length > 0) {%>
                new Noty({
                    theme: 'relax',
                    text: "<%= flash.error %>",
                    type: 'error',
                    layout: 'topRight',
                    timeout: 1500
                    
                }).show();    
            <%} %>
        </script>
        
    </body>
</html>